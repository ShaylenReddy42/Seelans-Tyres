apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    solution: seelanstyres
  name: seelanstyres-frontends-mvc
  namespace: default
data:
  ASPNETCORE_URLS: http://*:5001
  MvcBffUrl: http://seelanstyres-gateways-mvcbff:5050

---

apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    solution: seelanstyres
    app: seelanstyres-frontends-mvc
  name: seelanstyres-frontends-mvc
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: seelanstyres-frontends-mvc
  template:
    metadata:
      labels:
        app: seelanstyres-frontends-mvc
    spec:
      containers:
        - image: @DOCKER_REGISTRY@seelanstyres/frontends/mvc:@DOCKER_IMAGE_TAG@
          name: mvc
          imagePullPolicy: IfNotPresent
          securityContext:
            allowPrivilegeEscalation: false
          ports:
            - containerPort: 5001
          envFrom:
            - configMapRef:
                name: configmap-global
            - configMapRef:
                name: seelanstyres-frontends-mvc
            - secretRef:
                name: secrets-global
          resources:
            limits:
              cpu: 200m
              memory: 128Mi
          startupProbe:
            tcpSocket:
              port: 5001
            initialDelaySeconds: 25
            periodSeconds: 5
            failureThreshold: 3
            timeoutSeconds: 5
          readinessProbe:
            tcpSocket:
              port: 5001
            initialDelaySeconds: 3
            periodSeconds: 5
            failureThreshold: 3
            timeoutSeconds: 5
          livenessProbe:
            tcpSocket:
              port: 5001
            initialDelaySeconds: 3
            periodSeconds: 5
            failureThreshold: 3
            timeoutSeconds: 5
      restartPolicy: Always

---

apiVersion: v1
kind: Service
metadata:
  labels:
    solution: seelanstyres
    app: seelanstyres-frontends-mvc
  name: seelanstyres-frontends-mvc
  namespace: default
spec:
  ports:
    - port: 5001
      protocol: TCP
      targetPort: 5001
  selector:
    app: seelanstyres-frontends-mvc
  sessionAffinity: ClientIP
  type: ClusterIP
