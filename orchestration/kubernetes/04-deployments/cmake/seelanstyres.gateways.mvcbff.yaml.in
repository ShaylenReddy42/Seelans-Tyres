apiVersion: v1
kind: ConfigMap
metadata:
  labels:
    solution: seelanstyres
  name: seelanstyres-gateways-mvcbff
  namespace: default
data:
  ASPNETCORE_URLS: http://*:7050
  envAddressServiceHost: seelanstyres-services-addressservice
  envCustomerServiceHost: seelanstyres-services-identityservice
  envOrderServiceHost: seelanstyres-services-orderservice
  envTyresServiceHost: seelanstyres-services-tyresservice
  envBaseUrl: http://seelanstyres-gateways-mvcbff:7050

---

apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    solution: seelanstyres
    app: seelanstyres-gateways-mvcbff
  name: seelanstyres-gateways-mvcbff
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: seelanstyres-gateways-mvcbff
  template:
    metadata:
      labels:
        app: seelanstyres-gateways-mvcbff
    spec:
      containers:
        - image: @DOCKER_REGISTRY@seelanstyres/gateways/mvcbff:@DOCKER_IMAGE_TAG@
          name: mvcbff
          imagePullPolicy: IfNotPresent
          securityContext:
            allowPrivilegeEscalation: false
          ports:
            - containerPort: 7050
          envFrom:
            - configMapRef:
                name: configmap-global
            - configMapRef:
                name: seelanstyres-gateways-mvcbff
            - secretRef:
                name: secrets-global
          resources:
            requests:
              cpu: 250m
              memory: 256Mi
            limits:
              cpu: 500m
              memory: 384Mi
          startupProbe:
            tcpSocket:
              port: 7050
            initialDelaySeconds: 25
            periodSeconds: 5
            failureThreshold: 3
            timeoutSeconds: 5
          readinessProbe:
            tcpSocket:
              port: 7050
            initialDelaySeconds: 3
            periodSeconds: 5
            failureThreshold: 3
            timeoutSeconds: 5
          livenessProbe:
            tcpSocket:
              port: 7050
            initialDelaySeconds: 3
            periodSeconds: 5
            failureThreshold: 3
            timeoutSeconds: 5
      restartPolicy: Always

---

apiVersion: v1
kind: Service
metadata:
  labels:
    solution: seelanstyres
    app: seelanstyres-gateways-mvcbff
  name: seelanstyres-gateways-mvcbff
  namespace: default
spec:
  ports:
  - port: 7050
    protocol: TCP
    targetPort: 7050
  selector:
    app: seelanstyres-gateways-mvcbff
  type: ClusterIP
