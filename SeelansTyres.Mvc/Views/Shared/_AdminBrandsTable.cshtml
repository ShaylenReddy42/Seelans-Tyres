@inject IHttpClientFactory httpClientFactory

@{
    var client = httpClientFactory.CreateClient("SeelansTyresAPI");
    IEnumerable<BrandModel>? brands = new List<BrandModel>();

    try
    {
        var response = await client.GetAsync("api/brands");

        brands = await response.Content.ReadFromJsonAsync<IEnumerable<BrandModel>>();
    }
    catch (HttpRequestException ex)
    {
        // do nothing
    }
}

<table class="table table-bordered mb-4">
    <thead>
        <tr>
            <th class="table-dark text-center" colspan="2">Brands</th>
        </tr>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var brand in brands!)
    {
        <tr>
            <th scope="col">@brand.Id</th>
            <td>@brand.Name</td>
        </tr>
    }
    </tbody>
</table>