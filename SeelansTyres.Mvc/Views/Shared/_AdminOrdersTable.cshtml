@inject IHttpClientFactory httpClientFactory

@{
    var client = httpClientFactory.CreateClient("SeelansTyresAPI");
    HttpResponseMessage response;
    IEnumerable<OrderModel>? orders = new List<OrderModel>();

    try
    {
        if (ViewData["NotDeliveredOnly"] is true)
        {
            response = await client.GetAsync("api/orders/?notDeliveredOnly=true");
        }
        else
        {
            response = await client.GetAsync("api/orders");
        }

        orders = await response.Content.ReadFromJsonAsync<IEnumerable<OrderModel>>();
    }
    catch (HttpRequestException ex)
    {
        // do nothing
    }
}

<table class="table table-bordered table-responsive-lg mb-4">
    <thead>
        <tr>
        @if (ViewData["NotDeliveredOnly"] is true)
        {
            <th class="table-dark text-center" colspan="8">Undelivered Orders</th>
        }
        else
        {
            <th class="table-dark text-center" colspan="8">Orders</th>
        }
        </tr>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Customer</th>
            <th scope="col">Address</th>
            <th scope="col">Order Placed</th>
            <th scope="col">Total Price</th>
        @if (ViewData["NotDeliveredOnly"] is true)
        {
            <th scope="col">View Receipt</th>
            <th scope="col">Mark as Delivered</th>
        }
        else
        {
            <th scope="col">Delivered?</th>
            <th scope="col">View Receipt</th>
        }
        </tr>
    </thead>
    <tbody>
    @foreach (var order in orders!)
    {
        <tr>
            <th scope="row">@order.Id</th>
            <td>@($"{order.Customer!.FirstName} {order.Customer.LastName}")</td>
            <td>@($"{order.Address!.AddressLine1}, {order.Address.City}, {order.Address.PostalCode}")</td>
            <td>@order.OrderPlaced</td>
            <td>@($"{order.TotalPrice:R0.00}")</td>
        @if (ViewData["NotDeliveredOnly"] is true)
        {
            <td>
                <form class="viewReceiptForm">
                    <input id="orderId" value="@order.Id" hidden>
                    <button class="btn btn-info btn-sm w-100"><i class="fas fa-receipt" aria-hidden="true"></i></button>
                </form>
            </td>
            <td>
                <form method="post" asp-controller="Admin" asp-action="MarkOrderAsDelivered" asp-route-orderId="@order.Id">
                    <button class="btn btn-success btn-sm w-100"><i class="fa fa-check" aria-hidden="true"></i></button>
                </form>
            </td>
        }
        else
        {
            <td>@(order.Delivered ? "Yes" : "No")</td>
            <td>
                <form class="viewReceiptForm">
                    <input id="orderId" value="@order.Id" hidden>
                    <button class="btn btn-info btn-sm w-100"><i class="fas fa-receipt" aria-hidden="true"></i></button>
                </form>
            </td>
        }
        </tr>
    }
    </tbody>
</table>
