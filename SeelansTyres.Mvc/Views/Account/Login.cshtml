@model LoginModel
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="col-8 offset-2 col-md-6 offset-md-3 col-xl-4 offset-xl-4 py-4 my-4">
    <h3 class="seelanstyres-color">Log in</h3>
    <h4 class="seelanstyres-color">Enter your login details</h4>
    <hr class="mb-5"/>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <div class="col-md-12 mb-3">
            <label class="form-label" asp-for="UserName">Email</label>
            <input class="form-control" type="email" asp-for="UserName" placeholder="e.g. user@gmail.com">
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="col-md-12 mb-3">
            <label class="form-label" asp-for="Password">Password</label>
            <input class="form-control" type="password" asp-for="Password" placeholder="Enter Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="RememberMe">
            <label class="form-check-label" asp-for="RememberMe">Remember Me</label>
            <span asp-validation-for="RememberMe"></span>
        </div>
        <div class="text-center mb-3">
            <button class="btn btn-dark w-50">Login</button>
        </div>
    </form>
    <hr class="mt-5"/>
    <div class="text-center mb-1">
        <a class="modalLink w-50 text-decoration-none" href="#resetPasswordModal" data-bs-target="#resetPasswordModal" data-bs-toggle="modal" data-dismiss="modal">I forgot my password</a>
    </div>
</div>
