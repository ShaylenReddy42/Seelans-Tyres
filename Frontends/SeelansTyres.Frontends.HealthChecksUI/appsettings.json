{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    }
  },
  "LoggingSinks": {
    "Elasticsearch": {
      "Enabled": "$(envUseElasticsearch ?? false)",
      "Url": "$(envElasticsearchUrl ?? http://localhost:9201)"
    }
  },
  "AllowedHosts": "*",
  "UseDocker": false,
  "Host": "$(envHost ?? localhost)",
  "Applications": {
    "Mvc": "http://$(host):5001",
    "MvcBff": "http://$(host):5050",
    "AddressService": "http://$(host):5011",
    "IdentityService": "http://$(host):5005",
    "OrderService": "http://$(host):5012",
    "TyresService": "http://$(host):5013"
  },
  "GlobalHealthCheckEndpoint": "/health",
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Mvc Frontend",
        "Uri": "$(Applications:Mvc)$(GlobalHealthCheckEndpoint)"
      },
      {
        "Name": "Mvc Backend-for-Frontend",
        "Uri": "$(Applications:MvcBff)$(GlobalHealthCheckEndpoint)"
      },
      {
        "Name": "Address Microservice",
        "Uri": "$(Applications:AddressService)$(GlobalHealthCheckEndpoint)"
      },
      {
        "Name": "Identity / Customer Microservice",
        "Uri": "$(Applications:IdentityService)$(GlobalHealthCheckEndpoint)"
      },
      {
        "Name": "Order Microservice",
        "Uri": "$(Applications:OrderService)$(GlobalHealthCheckEndpoint)"
      },
      {
        "Name": "Tyres Microservice",
        "Uri": "$(Applications:TyresService)$(GlobalHealthCheckEndpoint)"
      }
    ],
    "EvaluationTimeInSeconds": 30,
    "MinimumSecondsBetweenFailureNotifications": 120
  }
}
